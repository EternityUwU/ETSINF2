			.kdata
var1:	.word 0xFFFFFFFF
##-- Paso 5. Cuestión 7.1
contexto:    .space 16
##----

#############################################################
##                  C�DIGO DEL MANEJADOR                   ##
#############################################################

          .ktext 0x80000080

    ## Preserva el contexto del programa de usuario
    ## 

        ##-- Paso 5. Cuestión 7.3
            .set noat
            sw $at, 0x0($k1)
            .set at

            sw $t0, 0x4($k1)
            sw $a0, 0x8($k1)
            sw $v0, 0xC($k1)
        ##----

    


    ## Restaura el contexto
    ## (nada de momento)
##-- Paso 7. Cuestión 10.1
retexc: 
##----
        ##-- Paso 5. Cuestión 7.4
            .set noat
            lw $at, 0x0($k1)
            .set at

            lw $t0, 0x4($k1)
            lw $a0, 0x8($k1)
            lw $v0, 0xC($k1)
        ##---

    ## Restaura el modo usuario y vuelve al programa
    ## 
        ## -- Paso 2. Cuestión 3
            mfc0 $k0 ,$14
        ## -----


	rfe
	jr $k0 

##-- Paso 7. Cuestión 10.3
test_handler:
        mfc0 $t0, $13     
        move $v0, $t0
        li $a0, 0x3C
        and $v0, $v0, $a0
        bne $v0, $zero, retexec     
##----

##-- Paso 7. Cuestión 10.4   
        li $a0, 0x1400
        and $t0, $t0, $a0
        li $a0, 0x400
        beq $a0, $t0, int0          # int0
        li $a0, 0x1000
        beq $a0, $t0, int2          # int2
        j retexec
##---


##-- Paso 7. Cuestión 10.1
int0: 
## Identifica y trata excepciones
    ## 

        ### -- Paso 3
        # li $v0, 11
        # li $a0, '*'
        # syscall
        ## -----

        ## -- Paso 4. Cuestión 5
            la $t0, 0xffff0000

            lw $a0, 4($t0) ## Le del regitro y la interupcción se cancela 
            li $v0, 11
            syscall
        ## ---
        
        j retexc
##----

##-- Paso 7. Cuestión 10.3

    int2: 
        la $t0, 0xffff0010
        li $a0, 0x1
        sb $a0, 0($t0)
        j retexc
