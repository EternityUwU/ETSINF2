          .text
          .globl __start 
__start: 
    ## Código de inicio
    ##-- Paso 5. Cuestión 7.2
        la $k1, contexto
    ##----

    ##-- Paso 1. Cuestión 1
        la $t0, 0xffff0000
        li $t1, 0x2
        sb $t1, 0($t0)
    ##----
        
    ##-- Paso 6. Cuestión 8.1
        la $t0, 0xffff0010
        li $t1, 0x1
        sb $t1, 0($t0)
    ##---- 
    
    ##-- Paso 6. Cuestión 8.2
        li $t1, 0x501
        mtc0 $t1, $12
        
    ## Salto al programa de usuario
	jal main

    ## C�digo de terminaci�n
	li $v0, 10
